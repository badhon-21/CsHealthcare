
@model IEnumerable<CsHealthcare.ViewModel.Physiotherapy.OpdTherapyDetailsModel>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PhysiotherapyName)
        </td>
        <td style="width: 15% !important">
            @Html.DisplayFor(modelItem => item.TherapyPrice)
        </td>
        <td style="width: 15% !important">
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td style="width: 15% !important">
            @Html.DisplayFor(modelItem => item.Discount)
        </td>
       
        <td style="width: 15% !important">
            @Html.DisplayFor(modelItem => item.SubTotal)
        </td>
        <td style="width: 15% !important">
            <a class="btn btn-primary btn-icon legitRipple" title="Edit" onclick="javascript: EditTherapy('@item.PhysiotherapyId');"><i class="icon-pencil"></i></a>
            <a class="btn btn-xs btn-danger" title="Delete" onclick="javascript: if (confirm('Are you sure you want to do operation?') == false) return false; DeleteTherapy('@item.Id','@item.PhysiotherapyId'); "><i class="icon-trash"></i></a>
        </td>
    </tr>
}



