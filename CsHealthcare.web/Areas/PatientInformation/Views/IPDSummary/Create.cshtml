                $("#DoctorId").val(doctor.Id);
                //getPatientId();
                //$("#txtPatientName").val(patient.Name);
                //$("#txtMobileNumber").val(patient.Mobile);
            });

        }


        function GetPatientInformation() {
            $.ajax({
                type: "GET",
                cache: false,
                url: "@(@Url.Action("GetPatientInformation", "IPDSummary", new {Area = "PatientInformation"}))",
                data: {  "PatientCode": $("#txtPatientCode").val() },
                dataType: "html",
                success: function(result) {

                    var t = JSON.parse(result);

                    $('#PatientCode').val(t.PatientCode);
                    $('#PatientName').val(t.Name);

                    var dateString = (t.AdmissionDate).substr(6);
                    var currentTime = new Date(parseInt(dateString));
