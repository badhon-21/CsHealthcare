                source: function (searchString, cb) {
                    return $.ajax({
                        dataType: 'json',
                        type: 'POST',
                        contentType: "application/json; charset=utf-8",
                        url: " /PatientInformation/IPDSummary/LoadDoctor",
                        data: "{'SearchString':'" + searchString + "'}",
                        chache: false,
                        success: function (data) {
