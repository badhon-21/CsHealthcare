@model CsHealthcare.ViewModel.Patient.InPatientDischargeSummaryModel
@{
    ViewBag.Title = "Details";
    Layout = null;
}

<style type="text/css">
    @@page {
        size: auto;
        margin: 0;
    }

    @@print {
        .hide-from-printer {
            display: none;
        }
    }
</style>


<div style="font-size: 20px;margin-left: 15%">
    <p>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; Discharge Summary</p>
</div>
<div style="margin-left: 10%">
    <table style="width:70%">
        <tr>
            <td><b>Patient Name:</b>&nbsp;@Model.PatientName</td>
            <td><b>Patient Code:</b>&nbsp;@Model.PatientCode</td>
        </tr>
        <tr>
            <td><b>Admission Date:</b>&nbsp;@Model.AdmissionDate.ToString("d")</td>
            <td><b>Discharge Date:</b>&nbsp;@Model.DischargeDate.ToString("d")</td>
        </tr>
        <tr>
            <td><b>Attending Physician:</b>&nbsp;@Model.AttendingPhysician</td>
            <td><b>Discharge By:</b>&nbsp;@Model.DischargeBy</td>
        </tr>
        <tr>
            <td><b>Referring Physician:</b>&nbsp;@Model.RefferingPhysician</td>
            <td><b>Consulting Physician:</b>&nbsp;@Model.ConsultingPhysician</td>
        </tr>
       
</table>

    <div style="width:90%">
        <p><b>Condition On Discharge:</b>&nbsp;@Model.ConditionOnDischarge</p>
        <p><b>Investigation during admission:</b>&nbsp;@Model.InvestigationDuringAdmission</p>
</div>
</div>
<div style="margin-left: 10%">
    <p>Operation Note:</p>
    <div style="width: 80%">
        <table style="width: 80%; border: 1px solid">
            <tr>
                <td >&nbsp;&nbsp;&nbsp; Operation Date:&nbsp;@Model.OperationDate.ToString("d")</td>
                <td>&nbsp;&nbsp;&nbsp; Operation Time:&nbsp;@Model.OperationTime</td>
            </tr>
            <tr>
                <td>&nbsp;&nbsp;&nbsp; Name of Anesthesia:&nbsp;@Model.NameOfAnesthesia</td>
                <td>&nbsp;&nbsp;&nbsp; Name Of Operation:&nbsp;@Model.NameOfOperation</td>
            </tr>
            <tr>
                <td>&nbsp;&nbsp;&nbsp; Indication Of Operation:&nbsp;@Model.IndicationOfOperation</td>
                <td>&nbsp;&nbsp;&nbsp; </td>
            </tr>
        </table>

        <p>&nbsp;</p>
    </div>
    <div style="width: 90%" >
        <p><b>Clinical Findings:</b>&nbsp;@Model.ClinicalFindings</p>
        <p><b>Baby Note:</b>&nbsp;@Model.BabyNote</p>
        <p><b>Treatment During Hospital:</b>&nbsp;@Model.TreatmentDuringHospital</p>
        <p><b>Continueing Rx:</b>&nbsp;@Model.ConsultineuningRx</p>
        <p><b>Instruction:</b>&nbsp;@Model.Instruction</p>
        <p><b>Consultation:</b>&nbsp;@Model.ConsultationDictician</p>
        <p><b>Follow Up:</b>&nbsp;@Model.FollowUp</p>
    </div>

            <p>&nbsp;</p>
            <p>&nbsp;</p>
            <p>&nbsp;</p>
            <p><b>Checked By:</b>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; Medical Officer</p>
            <p>&nbsp;</p>
            <p>&nbsp;</p>

            <div style="width: 70%; text-align: center;">
                <button id="btnPrint" onclick="myFunction()" class="hide-from-printer" style="margin-top:10%">Print </button>
                <a id="btnCancel" href="@Url.Action("Create", "Patient", new {Area = "PatientInformation"})" type="button" class="" style="margin-left: 1%;" class="hide-from-printer">Cancel</a>
            </div>
        </div>

   



    <script>
        function myFunction() {
            //Get the print button and put it into a variable
            var printButton = document.getElementById("btnPrint");
            var cancelButton = document.getElementById("btnCancel");
            //Set the print button visibility to 'hidden'
            printButton.style.visibility = 'hidden';
            cancelButton.style.visibility = 'hidden';
            //Print the page content
            window.print();
            //Set the print button to 'visible' again
            //[Delete this line if you want it to stay hidden after printing]
            printButton.style.visibility = 'visible';
            cancelButton.style.visibility = 'visible';


        }
    </script>
