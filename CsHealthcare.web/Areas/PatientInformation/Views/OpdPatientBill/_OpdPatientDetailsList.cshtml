
@model IEnumerable<CsHealthcare.ViewModel.Patient.OptPatientBillDetailsModel>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PurposeName)
        </td>
        
        <td style="width: 15% !important">
            @Html.DisplayFor(modelItem => item.Amount)
        </td>
        <td style="width: 15% !important">
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td style="width: 15% !important">
            @Html.DisplayFor(modelItem => item.SubTotal)
        </td>
        <td style="width: 15% !important">
            <a class="btn btn-primary btn-icon legitRipple" title="Edit" onclick="javascript: EditTest('@item.PurposeId');"><i class="icon-pencil"></i></a>
            <a class="btn btn-xs btn-danger" title="Delete" onclick="javascript: if (confirm('Are you sure you want to do operation?') == false) return false; DeleteTestDetails('@item.Id','@item.PurposeId'); "><i class="icon-trash"></i></a>
        </td>
    </tr>
}


