@model IEnumerable<CsHealthcare.ViewModel.MedicineCorner.InPatientDrugSaleReturnModel>


<table class="table table-striped table-bordered table-hover" id="InPatientDrugSaleReturn">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MemoNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LotNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PatientCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReturnPrice)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.ReturnQty)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReturnSubTotal)
        </th>

        <th>Action</th>
    </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MemoNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LotNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PatientCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReturnPrice)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.ReturnQty)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReturnSubTotal)
                </td>

                <td><a class="btn btn-xs green" title="Copy" href="@(Url.Action("PrintCopy", "InPatientDrugSaleReturn", new {area = "PatientInformation", id = item.Id}))">Print Copy</a></td>
            </tr>
        }
    </tbody>
</table>
