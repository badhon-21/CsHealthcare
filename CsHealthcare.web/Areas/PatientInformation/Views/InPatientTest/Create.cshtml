    <script type="text/javascript">
            jQuery(document).ready(function () {
                allowInt();
                initPatientTestAutoComplete();

                initTestAutoComplete();
                initTestCodeAutoComplete();

                ComponentsPickers.init();
                $('#txtDateOfBirth').val(getTodate());

                $(".datetimepicker").datepicker();

                //$('#CabinRentDate').on('change', function () {
                //    SelectDate();

                //});
            });



            function getTodate() {
                var dob = new Date();
                var day = (dob.getDate() < 10 ? '0' : '') + dob.getDate();
                var month = ((dob.getMonth() + 1) < 10 ? '0' : '') + (dob.getMonth() + 1);
                return (month + "/" + day + "/" + dob.getFullYear());
            }

            function allowInt() {
                $(".integer").format({ precision: 0, allow_negative: false, autofix: true });
            }





            function initPatientTestAutoComplete() {
                $('#txtPatientCode').typeahead({
                    hint: true,
                    highlight: true,
                    minLength: 2,
                    limit: 8
                }, {
                    source: function (searchString, cb) {
                        return $.ajax({
                            dataType: 'json',
                            type: 'POST',
                            contentType: "application/json; charset=utf-8",
                            url: " /PatientInformation/InPatientTest/LoadPatientCode",
                            data: "{'SearchString':'" + searchString + "'}",
                            chache: false,
                            success: function (data) {
                                var result = [];
                                $.each(data, function (index, val) {
                                    result.push({
                                        Id: val.Id,
                                        Name: val.PatientCode,
                                        value: val.PatientCode
                                    });
                                });
                                cb(result);
                            }
                        });
                    }
                }).on("typeahead:selected", function (obj, patient) {
                    $("#tId").val(patient.Id);
                    //$("#PatientId").val(patient.Id);
                    //$("#PatientCode").val(patient.PatientCode);
                    LoadPatientCode();
                    //LoadPatientName();
                    //$("#txtPatientName").val(patient.Name);
                    //$("#txtMobileNumber").val(patient.Mobile);
                });

            }

            function LoadPatientCode() {
                $.ajax({

                    type: "GET",
                    cache: false,
                    url: "@(@Url.Action("PatientCode", "InPatientTest", new {Area = "PatientInformation" }))",
                    data: { "Id": $("#tId").val() },
                dataType: "html",
                success: function (result) {

                    var t = JSON.parse(result);



                    $('#PatientCode').val(t.PatientCode);
                        $('#PatientId').val(t.PatientId);
                        $('#PatientName').val(t.PatientName);


                    //$('#Total').val(t.T_Price);
                    // $('#quantity').focus();
                },
                error: function (error) {
                    //Metronic.unblockUI();
                    var msg = 'Fail to load .';
                    alert(msg);
                }
            });
            }



        function initTestAutoComplete() {
            $('#TestId').typeahead({
                hint: true,
                highlight: true,
                minLength: 2,
                limit: 8
            }, {
                source: function (searchString, cb) {
                    return $.ajax({
                        dataType: 'json',
                        type: 'POST',
                        contentType: "application/json; charset=utf-8",
                        url: " /PatientInformation/InPatientTest/LoadTest",
                        data: "{'SearchString':'" + searchString + "'}",
                        chache: false,
                        success: function (data) {
                            var result = [];
                            $.each(data, function (index, val) {
                                result.push({
                                    Id: val.T_ID,
                                    Name: val.T_NAME,
                                    value: val.T_NAME
                                });
                            });
                            cb(result);
                        }
                    });
                }
            }).on("typeahead:selected", function (obj, patient) {
                $("#pId").val(patient.Id);
                LoadPrice();
            });

        }
        function initTestCodeAutoComplete() {
            $('#TestCode').typeahead({
                hint: true,
                highlight: true,
                minLength: 2,
                limit: 8
            }, {
                source: function (searchString, cb) {
                    return $.ajax({
                        dataType: 'json',
                        type: 'POST',
                        contentType: "application/json; charset=utf-8",
                        url: " /PatientInformation/InPatientTest/LoadTestCode",
                        data: "{'SearchString':'" + searchString + "'}",
                        chache: false,
                        success: function (data) {
                            var result = [];
                            $.each(data, function (index, val) {
                                result.push({
                                    Id: val.T_ID,

                                    Name: val.T_CODE,
                                    value: val.T_CODE
                                });
                            });
                            cb(result);
                        }
                    });
                }
            }).on("typeahead:selected", function (obj, patient) {
                $("#pId").val(patient.Id);
                LoadPrice();
                LoadName();
                //$("#txtPatientName").val(patient.Name);
                //$("#txtMobileNumber").val(patient.Mobile);
            });

        }
        function LoadName() {
            $.ajax({

                type: "GET",
                cache: false,
                url: "@(@Url.Action("LoadName", "InPatientTest", new {Area = "PatientInformation" }))",
                data: { "Id": $("#pId").val() },
            dataType: "html",
            success: function (result) {

                var t = JSON.parse(result);
                $('#TestId').val(t);

            },
            error: function (error) {
                //Metronic.unblockUI();
                var msg = 'Fail to load .';
                alert(msg);
            }
        });
        }
        function LoadPrice() {
            $.ajax({

                type: "GET",
                cache: false,
                url: "@(@Url.Action("LoadPrice", "InPatientTest", new {Area = "PatientInformation" }))",
                data: { "Id": $("#pId").val() },
            dataType: "html",
            success: function (result) {

                var t = JSON.parse(result);
                $('#Price').val(t.T_Price);
                $('#Total').val(t.T_Price);
                // $('#quantity').focus();
            },
            error: function (error) {
                //Metronic.unblockUI();
                var msg = 'Fail to load .';
                alert(msg);
            }
        });
        }
        function calculate1() {
            var myBox1 = document.getElementById('Price').value;
            var myBox2 = document.getElementById('Quantity').value;
            //var result = document.getElementById('SubTotal');
            var total = document.getElementById('Total');
            //var total1 = document.getElementById('DeuPrice');
            var myResult = myBox1 * myBox2;
            total.value = myResult;
            //total.value = total;
        }

        function SetTestList() {
            //if (SellsDetailsValidationCheck()) {
            //App.blockUI();
            var loadArea = $("#testDetailsList");
            $.ajax({
                type: "GET",
                cache: false,
                url: "@(@Url.Action("SetTestList", "InPatientTest", new {Area = "PatientInformation" }))",
                data: { "TestId": $('#pId').val(), "Price": $('#Price').val(), "Quantity": $('#Quantity').val(), "Total": $('#Total').val() },
            dataType: "html",
            success: function (result) {
                //App.unblockUI();
                loadtestDetails();
                loadArea.html(result);
                $('#TestId').val('');

                $('#Price').val('');
                $('#Quantity').val('');

                $('#Total').val('');

                $('#addbtn').show();
                $('#updatebtn').hide();
            },
            error: function (xhr, ajaxOptions, thrownError) {
                //App.unblockUI();
                var msg = 'Fail to set sells list.';
                alert(msg);
            }
        });
        // }
        }
        function loadtestDetails() {
            $.ajax({
                type: "GET",
                cache: false,
                url: "@(@Url.Action("getTestDetails", "InPatientTest", new {Area = "PatientInformation" }))",
                data: { },
            dataType: "html",
            success: function (result) {
                var value = JSON.parse(result);
                $('#ItemQuantity').val(value.ItemInChart);

                $('#DeuAmount').val(value.SubTotal);

            },
            error: function (error) {
                //Metronic.unblockUI();
                var msg = 'Fail to load .';
                alert(msg);
            }
        });
        }



    </script>

