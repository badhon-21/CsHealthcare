@model IEnumerable<CsHealthcare.ViewModel.Patient.InPatientDailyBillViewModel>
<div class="col-md-12 text-center">
    <h3>Daily Bill</h3>

</div>

<table class="table table-striped table-bordered table-hover" id="">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PurposeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
           

           
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Date
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PurposeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td style=" text-align: right">
                    @Html.DisplayFor(modelItem => item.Total)
                </td>
               

               
            </tr>
        }
        <tr>

            <td style="text-align: right; font-weight: bold" colspan="4">&nbsp;Total:</td>
            <td style="text-align: right; font-weight: bold">@Model.Sum(x => x.Total) </td>
        </tr>
    </tbody>
</table>