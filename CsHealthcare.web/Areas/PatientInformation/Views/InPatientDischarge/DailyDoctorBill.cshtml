@model IEnumerable<CsHealthcare.ViewModel.Patient.InPatientDoctorInvoiceModel>

<div class="col-md-12 text-center">
    <h3>Daily Consultant Bill</h3>

</div>

<table class="table table-striped table-bordered table-hover" id="InPatientDoctor">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
           

            <th>
                @Html.DisplayNameFor(model => model.DoctorName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>

           

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Date.ToString("d")
                </td>

               

                <td>
                    @Html.DisplayFor(modelItem => item.DoctorName)
                </td>
                <td style=" text-align: right">
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
              


            </tr>
        }
        <tr>

            <td style="text-align: right; font-weight: bold" colspan="2">&nbsp;Total:</td>
            <td style="text-align: right; font-weight: bold">@Model.Sum(x => x.Amount) </td>
        </tr>
    </tbody>
</table>