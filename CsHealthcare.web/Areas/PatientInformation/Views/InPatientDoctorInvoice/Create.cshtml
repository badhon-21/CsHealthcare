                                    <div class="col-md-12">

                                        <div class="control-label col-md-4 text-center" style="margin-left: 0px">Patient Name</div>
                                        <div class="col-md-7" style="margin-left: 0px">
                                            <input id="PatientName" name="PatientName" value="" class="form-control "/>
                                        </div>


                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="col-md-12">

                                        <div class="control-label col-md-4 text-center" style="margin-left: 0px">Doctor </div>
                                        <div class="col-md-7" style="margin-left: 0px">
                                            <input id="DoctorName" name="DoctorName" value="" class="form-control "/>
                                        </div>


                                    </div>
                                </div>

