@model IEnumerable<CsHealthcare.ViewModel.MicrobiologyTest.MicrobiologyTestModel>


<table class="table table-striped table-bordered table-hover" id="listEducation">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.PatientName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SpecimenName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrganismIsolated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReferredBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Culture)
            </th>


            <th>
                @Html.DisplayNameFor(model => model.Ampicillin)
            </th>

            <th>Action</th>
        </tr>
