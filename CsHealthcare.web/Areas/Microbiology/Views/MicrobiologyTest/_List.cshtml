                    @Html.DisplayFor(modelItem => item.SpecimenName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrganismIsolated)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReferredBy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Culture)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ampicillin)
                </td>
                
                
                
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
