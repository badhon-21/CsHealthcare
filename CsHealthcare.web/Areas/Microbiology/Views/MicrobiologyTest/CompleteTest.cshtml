@model CsHealthcare.ViewModel.Diagnostic.TestRequestModel
@{
    ViewBag.Title = "CompleteTest";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<table class="table table-striped table-bordered table-hover" id="listPatientList">
    <thead>
        <tr>
            <th style="width: 20% !important;">
                VoucherNumber
            </th>
            <th style="width: 20% !important;">
                PatientName
            </th>


            <th style="width: 20% !important;">
                TestName
            </th>


            <th style="width: 20% !important;">
               Status
            </th>
            <th style="width: 20% !important;">
                PaymentStatus
            </th>


            <th>Action</th>
        </tr>
    </thead>
    <tbody>
       
            <tr>
                <td>
                    @Model.VoucherNumber
                </td>
                <td>
                    @Model.PatientName
                </td>

                <td style="width: 20% !important;">
                    @Model.TestName
                </td>

                <td style="width: 20% !important;">
                    @Model.Status
                </td>
                <td style="width: 20% !important;">
                    @Model.PaymentStatus
                </td>

                <td style="width: 20% !important;">
                    @if (@Model.DeuAmount != 0)
                    {

                        <a class="btn btn-xs green"  title="DeuPayment" href="@(Url.Action("DeuPayment", "MicrobiologyTest", new {Area = "Microbiology", id = @Model.Id}))"><i class="glyphicon glyphicon-pencil"></i>Deu Payment</a>

                    }
                    else
                    {
                    
                        <a class="btn btn-xs green"  title="DeliverReport" href="@(Url.Action("DeliverReport", "MicrobiologyTest", new {Area = "Microbiology", id = @Model.Id}))"><i class="glyphicon glyphicon-pencil"></i>Deliver Report</a>
                    
                    }
                </td>
    
            </tr>
        
    </tbody>
</table>

