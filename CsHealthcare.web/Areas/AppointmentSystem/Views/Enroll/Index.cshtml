    <script type="text/javascript" src="~/Assets/global/plugins/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>
    <script src="~/Assets/Pages/components-pickers.js"></script>
    <script src="~/Scripts/jquery.format.1.05.js"></script>

    <script>

        jQuery(document).ready(function () {
            App.blockUI();
            ComponentsPickers.init();
            //LoadDoctorList();
            //LoadPaymentTypeList();
            dateChangeEvent();
            $('#txtAppointmentDate').val(getTodate());
            $('#txtDateOfBirth').val(getTodate());
            $('#ddlAge').val('0');
            $('#txtPatientType').val('Old');
            allowInt();
            //initPatientType();
            ageChangeEvent();
            App.unblockUI();
            initOcupationAutoComplete();
            initAmountPurpose();
            initConsultantAutoComplete();
        });

        function forRadOne() {
            $('#txtPatientId').val();
            $('#txtPatientId').prop('disabled', false);
            $('#btnSearch').prop('disabled', false);
            $('#txtPatientType').val('Old');

            $('#day_count').empty();
            $('#day_count').hide();
        }

        function forRadTwo() {
            $('#txtPatientId').val('0');
            $('#txtPatientId').prop('disabled', true);
            $('#btnSearch').prop('disabled', true);
            $('#txtPatientType').val('New');

            $('#day_count').empty();
            $('#day_count').hide();
        }

        function initAmountPurpose() {
            $('#ddlPurpose').change(function () {
                getAmountPurpose();
            });
        }

        function initConsultantAutoComplete() {
            $('#txtConsultant').typeahead({
                hint: true,
                highlight: true,
                minLength: 2,
                limit: 8
            }, {
                source: function (searchString, cb) {
                    return $.ajax({
                        dataType: 'json',
                        type: 'POST',
                        contentType: "application/json; charset=utf-8",
                        //  url: 'http://gd.geobytes.com/AutoCompleteCity?callback=?&q=' + q,ko
                        url: "@(@Url.Action("LoadDoctorList", "Appointment", new {Area = "AppointmentSystem"}))",
                        data: "{'SearchString':'" + searchString + "'}",
                        chache: false,
                        success: function (data) {
                            var result = [];
                            $.each(data, function (index, val) {
                                result.push({
                                    Id: val.Id,
                                    value: val.Name
                                });
                            });
                            cb(result);
                            //$('.nationality').removeClass('spinner');
                        }
                });
        }
        }).on("typeahead:selected", function (obj, patient) {
            $("#ddlDoctorInformation").val(patient.Id);
                LoadPaymentTypeList();
            });

        }

        function getAmountPurpose() {
            $.ajax({
                type: "GET",
                cache: false,
                url: "@(@Url.Action("getAmountPurpose", "AppointmentPayment", new { Area = "AppointmentSystem" }))",
                data: { "Id": $('#ddlPurpose').val() },
                dataType: "html",
                success: function (result) {
                    var t = JSON.parse(result);
                    $('#txtAmount').val(t.Amount);
                    $("#txtNetAmount").val(t.Amount);
                },
                error: function (error) {
                    App.unblockUI();
                    //var msg = 'Fail to load payment type.';
                    //alert(msg);
                }
            });
        }

        function LoadPaymentTypeList() {
            $("#ddlPurpose").empty();
            var options = $("#ddlPurpose");
            $.ajax({
                type: "GET",
                cache: false,
                url: "@(@Url.Action("LoadPaymentTypeList", "AppointmentPayment", new { Area = "AppointmentSystem" }))",
                data: { "DoctorId": $('#ddlDoctorInformation').val() },
                dataType: "html",
                success: function (result) {
                    var t = JSON.parse(result);
                    $.each(t, function () {
                        options.append($("<option />").val(this.Id).text(this.Description));
                    });
                    getAmountPurpose();
                },
                error: function (error) {
                    App.unblockUI();
                    //var msg = 'Fail to load payment type.';
                    //alert(msg);
                }
            });
        }

        function initOcupationAutoComplete() {
            $('.chiefComplaint').typeahead({
                hint: true,
                highlight: true,
                minLength: 2,
                limit: 8
            }, {
                source: function (searchString, cb) {
                    return $.ajax({
                        dataType: 'json',
                        type: 'POST',
                        contentType: "application/json; charset=utf-8",
                        url: "@Url.Action("GetOcupation", "Enroll", new {area= "AppointmentSystem" })",
                        data: "{'SearchString':'" + searchString + "'}",
                        chache: false,
                        success: function (data) {
                            var result = [];
                            $.each(data, function (index, val) {
                                result.push({
                                    Id: val.Id,
                                    value: val.Title
                                });
                            });
                            cb(result);
                        }
                    });
                }
            }).on("typeahead:selected", function (obj, value) {
                $("#txtOccupationId").val(value.Id);

            });
        }

        function initPatientType() {
            $(".PatientType").change(function () {
                $('#txtPatientId').val('');
                if ($("#radOld").attr("checked")) {
                    $('#txtPatientType').val('Old');
                    $("#txtPatientId").prop('disabled', false);
                    $("#btnSearch").prop('disabled', false);
                } else {
                    $('#txtPatientType').val('New');
                    $("#txtPatientId").prop('disabled', true);
                    $("#btnSearch").prop('disabled', true);
                    $('#txtPatientId').val('0');
                    $("#patNameId1").hide();
                    $("#patNameId2").show();
                }
            });
        }

        function allowInt() {
            $(".integer").format({ precision: 0, allow_negative: false, autofix: true });
        }

        function getPatientInformation() {
            App.blockUI();
            $.ajax({
                type: "GET",
                cache: false,
                url: "@(@Url.Action("getPatientInformation", "Enroll", new {Area = "AppointmentSystem"}))",
                data: { "PatientCode": $('#txtPatientId').val() },
                dataType: "html",
                success: function (result) {
                    var t = JSON.parse(result);
                    if (t.Id == 0) {
                        $('#txtPatientId').val('');
                        $('#txtPatientName').val('');
                        $('#txtFatherName').val('');
                        $('#txtMotherName').val('');
                        $('#txtReferanceName').val('');

                        $('#txtDateOfBirth').val('');
                        $('#ddlSex').val('MALE');
                        $('#ddlBloodGroup').val('B+');
                        $('#txtAddresse').val('');
                        $('#txtMobileNumber').val('');
                        alert("Patient does not exist.");
                    } else {
                        $('#txtPatientName').val(t.Name);
                        $('#txtFatherName').val(t.FatherName);
                        $('#txtMotherName').val(t.MotherName);
                        $('#txtReferanceName').val(t.ReferanceName);

                        var dob = new Date(parseInt(t.DateOfBirth.substr(6)));
                        var day = (dob.getDate() < 10 ? '0' : '') + dob.getDate();
                        var month = ((dob.getMonth() + 1) < 10 ? '0' : '') + (dob.getMonth() + 1);
                        $('#txtDateOfBirth').val(month + "/" + day + "/" + dob.getFullYear());
                        $('#ddlAge').val(calculateAge(dob.getMonth(), dob.getDate(), dob.getFullYear()));
                        $('#ddlSex').val(t.Sex);
                        $('#ddlBloodGroup').val(t.BloodGroup);
                        $('#txtAddresse').val(t.Address);
