@model IEnumerable<CsHealthcare.ViewModel.Accounts.PettyCashModel>

<table class="table " id="voucherList">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TransDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VoucherNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>

            @*<th></th>*@
        </tr>
    </thead>

    <tbody id="d">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.TransDate.ToString("dd-MM-yyyy")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VoucherNo)
                </td>
                <td>
                     @item.Amount
                </td>

                @*<td>
                        @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
