@model IEnumerable<CsHealthcare.ViewModel.Patient.InPatientDrugModel>


<table class="table table-striped table-bordered table-hover" id="sale">
    <thead>
        <tr>
            <th>
                Date
            </th>
            <th>
                Voucher No
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PatientCode)
            </th>
           
            <th>
                Price
            </th>
          
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.SaleDateTime.Value.ToString("d")
                </td>
                <td>
                    @item.VoucherNo
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PatientCode)
                </td>
              
                <td style="text-align: right">
                    @item.TotalPrice
                </td>
                
            </tr>
        }


        <tr>

            <td style="text-align: right; font-weight: bold" colspan="3">
                Total
            </td>
            <td style="text-align: right; font-weight: bold">
                @Model.Sum(x => x.TotalPrice)
            </td>

        </tr>
    </tbody>
</table>

