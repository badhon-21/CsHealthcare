@model IEnumerable<CsHealthcare.ViewModel.Diagnostic.TestRequestModel>


<table class="table table-striped table-bordered table-hover" id="listPatientList">
    <thead>
        <tr>
            <th style="width: 10% !important;">
                @Html.DisplayNameFor(model => model.VoucherNumber)
            </th>
            <th style="width: 10% !important;">
                @Html.DisplayNameFor(model => model.PatientCode)
            </th>
            <th style="width: 10% !important;">
                @Html.DisplayNameFor(model => model.PatientName)
            </th>


            <th style="width: 10% !important;">
                @Html.DisplayNameFor(model => model.TestName)
            </th>


            <th style="width: 10% !important;">
                @Html.DisplayNameFor(model => model.Status)
            </th>
            @*<th style="width: 20% !important;">
                    @Html.DisplayNameFor(model => model.PaymentStatus)
                </th>*@


            <th style="width: 10% !important;">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="width: 10% !important;">
                    @Html.DisplayFor(modelItem => item.VoucherNumber)
                </td>

                <td style="width: 10% !important;">
                    @Html.DisplayFor(modelItem => item.PatientCode)
                </td>
                <td style="width: 10% !important;">
                    @Html.DisplayFor(modelItem => item.PatientName)
                </td>

                <td style="width: 10% !important;">
                    @Html.DisplayFor(modelItem => item.TestName)
                </td>

                <td style="width: 10% !important;">
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                @*<td style="width: 20% !important;">
                        @Html.DisplayFor(modelItem => item.PaymentStatus)
                    </td>*@



                <td style="width: 10% !important;">
                    <a class="btn btn-xs green" title="Take Sample" href="@(Url.Action("UpdateDeleveredReport", "TestRequest", new {Area = "Diagnostic", id = item.Id, patientid = item.PatientId, testId = item.TestNameId}))" data-modal="">Report Delevered</a>
                </td>
            </tr>
        }
    </tbody>
</table>
