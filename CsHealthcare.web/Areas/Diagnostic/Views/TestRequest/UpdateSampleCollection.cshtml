    <script>
        jQuery(document).ready(function() {
            //loadStatement();
        });


        function loadStatement() {
            var loadArea = $("#PatientGroup");
            $.ajax({
                type: "GET",
                cache: false,
                url: "@(@Url.Action("TestCompleteList", "TestRequest", new {Area = "Diagnostic" }))",
                data: { "Id": $('#txtId').val(), "Name": $('#txtName').val(),"Mobile":$('#txtMobile').val(),"Address":$('#txtAddress').val() },
            dataType: "html",
            success: function (result) {
                loadArea.html(result);

            },
            error: function (xhr, ajaxOptions, thrownError) {
                var msg = 'Fail to load  List.';
                alert(msg);
            }
        });
        }


    </script>

}











