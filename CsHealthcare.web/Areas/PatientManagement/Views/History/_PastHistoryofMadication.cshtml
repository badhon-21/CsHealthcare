@model IEnumerable<CsHealthcare.ViewModel.Patient.PatientPastHistoryOfMadicationModel>


<table class="table table-striped table-bordered table-hover" id="tabChiefComplaintList">
    <thead>
        <tr>
            <th style="width: 25% !important">
                @Html.DisplayNameFor(model => model.DrugPresentaionTypeName)
            </th>
            <th style="width: 20% !important">
                @Html.DisplayNameFor(model => model.DrugName)
            </th>

            <th style="width: 10% !important">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="width: 25% !important">
                    @Html.DisplayFor(modelItem => item.DrugPresentaionTypeName)
                </td>
                <td style="width: 20% !important">
                    @Html.DisplayFor(modelItem => item.DrugName)
                </td>

                <td style="width: 10% !important">
                    <a class="btn btn-xs btn-danger" title="Delete" onclick="javascript: if (confirm('Are you sure you want to do operation?') == false) return false; DeletePastHistoryOfMadication(@item.DrugId);"><i class="fa fa-trash-o"></i></a>

                </td>
            </tr>
        }
    </tbody>
</table>




