<div class="row">
    
        @*<div class="col-md-1"></div>*@
        <div class="col-md-12 printOnly" >
            <!-- BEGIN Portlet PORTLET-->
            <div class="portlet light">
                <div class="portlet-title">
                    <div class="caption">
                        @*<i class="fa fa-question font-green-sharp"></i>*@
                        <span class="caption-subject font-green-sharp uppercase">Purchase Order Details</span>
                    </div>
                    <div class="tools">
                        <a href="javascript:;" class="collapse">
                        </a>
                        <a href="javascript:;" class="fullscreen">
                        </a>
                    </div>
                    <div class="actions margin-right-10">

                    </div>
                </div>

                <div class="portlet-body portlet-empty" style="min-height: 600px; margin-top: 20px">

                    <div class="col-md-12 row form-group">

                        <div class="col-xs-6">
                            <div class="col-xs-5">PurchaseDate: </div>
                            <div class="col-xs-7">
                                @Model.RecordDate.ToString("d")
                            </div>
                        </div>
                       



                    </div>
                    
                    <div class="col-xs-6">
                        <div class="col-xs-5">Company : </div>
                        <div class="col-xs-7">
                            @*@Html.DropDownList("DRUG_MANUFACTURERId", null, htmlAttributes: new {@class = "form-control border-radius-4"})*@
                           @Model.DRUG_MANUFACTURERName
                        </div>
                    </div>
                    <div class="col-xs-5">
                        <div class="col-xs-5">@*Department :*@ </div>
                        <div class="col-xs-8">
                            @*<input id="LotId" name="LotId" class="form-control " value="" placeholder="" />*@
                        </div>
                    </div>

                    <div class="col-xs-12 row form-group">


                        <div class="col-xs-6">
                            <div class="col-xs-5">Total Drugs: </div>
                            <div class="col-xs-7">
                                @Model.TotalQty
                            </div>
                        </div>



                    </div>
                
                    <div class="col-md-12 form-group" style="margin-top: 20px">
                        @*<div class="col-md-1"></div>*@
                        <div class="col-md-10">
                            <table class="table table-striped table-bordered table-hover" id="tabChiefComplaintList">
                                <thead>
                                <tr>
                                    <th class="hidden">
                                        ID
                                    </th>
                                    <th style="width: 25% !important">
                                        Drug
                                    </th>
                                    @*<th style="width: 15% !important">
                                            Drug Type & UnitStrength
                                        </th>*@

                                    @*<th style="width: 15% !important">
                                        Re-Order Level
                                    </th>
                                    <th style="width: 15% !important">
                                        Remaining Qty
                                    </th>
                                    <th style="width: 15% !important">
                                        Pack Qty
                                    </th>*@
                                    <th style="width: 10% !important">
                                        Order Qty
                                    </th>


                                </tr>
                                </thead>
                                <tbody id="">
                                <tr>
                                    @foreach (var item in Model.PurchaseOrderDetailsModels)
                                    {
                                        <td style="width: 10% !important">@item.DrugName &nbsp;@item.DrugPresentationType &nbsp;@item.DrugUnitStrength</td>
                                        <td style="width: 10% !important">@item.Quantity </td>
                                    }
                                </tr>

                                </tbody>
                            </table>
                        </div>
                        <div class="col-md-2"></div>
                    </div>



                    <br /><br /><br /><br />

                    <div class="col-md-12">
                        <div class="col-md-4"></div>
                        <div class="col-md-7">
                            @*<div class="col-md-6" style="margin-top: 30px">
                                <div class="col-md-6">
