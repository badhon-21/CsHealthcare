
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
    <h4 class="modal-title"> <i class="fa fa-plus"></i> Add File</h4>
</div>


@using (Html.BeginForm("UploadFile", "DrugStockIn", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <div class="modal-body">
        <div class="form-horizontal">
            <div class="row col-md-12">
                @Html.TextBox("file", "", new {type = "file"}) <br/>

                <input type="submit" value="Upload"/>

                @ViewBag.Message

            </div>

        </div>
    </div>
    <div class="modal-footer">
        <button id="show_buton" type="button" data-dismiss="modal" class="btn blue-ebonyclay">Done</button>
        <button class="btn blue-dark" data-dismiss="modal" type="button">Close</button>
    </div>

}
