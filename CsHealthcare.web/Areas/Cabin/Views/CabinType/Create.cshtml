                </div>
            </div>*@


            <div class="form-group">
                @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-8">
                    <select id="Status" name="Status" class="form-control">
                        <option value="Active">Active</option>
