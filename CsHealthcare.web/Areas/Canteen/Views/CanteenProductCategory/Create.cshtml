@model CsHealthcare.ViewModel.Canteen.CategoryModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="row">
    <div class="col-md-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="col-md-2"></div>
        <div class="col-md-8">
            
                   
                        <div class="portlet light">
                            <div class="portlet-title">
                                <div class="caption">
                                    <i class="fa fa-question font-green-sharp"></i>
                                    <span class="caption-subject font-green-sharp uppercase">Create</span>
                                </div>
                                <div class="tools">
                                    <a href="javascript:;" class="collapse">
                                    </a>
                                    <a href="javascript:;" class="fullscreen">
                                    </a>
                                </div>
                                <div class="actions margin-right-10">

                                </div>
                            </div>
                          
                            <div class="portlet-body portlet-empty">
                                @using (Html.BeginForm("Create", "CanteenProductCategory", new { area = "Canteen" }, FormMethod.Post, new { @class = "" }))
                                {
                                    @Html.AntiForgeryToken()

                                    <div class="form-horizontal">


                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                        <div class="modal-body">
                                            <div class="form-group">
                                                @Html.LabelFor(model => model.Name, htmlAttributes: new {@class = "control-label col-md-4"})
                                                <div class="col-md-8">
                                                    @Html.EditorFor(model => model.Name, new {htmlAttributes = new {@class = "form-control", @required = "required", @maxlength = 50}})
                                                    @Html.ValidationMessageFor(model => model.Name, "", new {@class = "text-danger"})
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                @Html.LabelFor(model => model.Description, htmlAttributes: new {@class = "control-label col-md-4"})
                                                <div class="col-md-8">
                                                    @Html.EditorFor(model => model.Description, new {htmlAttributes = new {@class = "form-control", @maxlength = 150}})
                                                    @Html.ValidationMessageFor(model => model.Description, "", new {@class = "text-danger"})
                                                </div>
                                            </div>
                                            @*<div class="col-md-12">*@
                                            <fieldset>

                                                <div class="form-group">


                                                    @Html.LabelFor(model => model.DisplayOrder, htmlAttributes: new {@class = "control-label col-md-4"})
                                                    <div class="col-md-4">
                                                        <select id="DisplayOrder" name="DisplayOrder" class="form-control">
                                                            <option>1</option>
                                                            <option>2</option>
                                                            <option>3</option>
                                                        </select>
                                                    </div>
                                                </div>

                                            </fieldset>

                                            <div class="form-group">
                                                @Html.LabelFor(model => model.IsFeaturedProduct, htmlAttributes: new {@class = "control-label col-md-4"})
                                                <div class="col-md-8" >
                                                    <div class="checkbox"style="margin-left:20px">
                                                        @Html.EditorFor(model => model.IsFeaturedProduct)
                                                        @Html.ValidationMessageFor(model => model.IsFeaturedProduct, "", new {@class = "text-danger"})
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <a class="btn default" style="width: 15%;" href="@Url.Action("Index", "CanteenProductCategory", new {Area = "Canteen" })">Cancel</a>
                                            <input type="submit" value="Save" class="btn green" style="width: 15%;" />
                                        </div>

                                            

                                    </div>
                                }

                            </div>
                        </div>
                    
              
        </div>
        <div class="col-md-2"></div>
    </div>
</div>


@section Scripts {
   
    @Scripts.Render("~/bundles/jqueryval")
}
