    <script>

        $(document).ready(function () {
            initMenu();
            keyPressEvent();
            loadSells();
            initProductCategoryAutoComplete();
            loadsellsDetails();
           
            //LoadSaleSummary();
            decimal_with_two_digit();

            //$('#ProductId').on('change', function () {
            //    LoadPrice();
            //});

